{
  "compilerOptions": {
    "target": "es5", // 出力ファイルのJavaScriptバージョン
    "module": "commonjs", // 使用するモジュールシステム
    "strict": true, // 厳密な型チェックを有効にする
    "esModuleInterop": true, // ESモジュールとの互換性を有効にする
    "skipLibCheck": true, // ライブラリファイルの型チェックをスキップ
    "forceConsistentCasingInFileNames": true, // ファイル名の大文字小文字を強制する
    "outDir": "./dist", // 出力ディレクトリ
    "sourceMap": true // ソースマップの生成
  },
  "include": [ "src" ] // コンパイル対象ディレクトリ
}
